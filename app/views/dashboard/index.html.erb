<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6">
        <div class="card ">
          <div class="header">
            <h4 class="title">Operations Planning</h4>
            <div class="content">
              <div class="row text-center text-lg-left">

                <div class="col-lg-4">

                  <a href="/businesses" class="d-block mb-10 h-50">
                    <div class="middle">
                      <div class="text">
                        <h1><%= @businesses.count %></h1>
                        <h3>Business</h3>
                      </div>
                    </div>
                  </a>
                </div>
                <div class="col-lg-4">
                  <a href="/work_details" class="d-block mb-10 h-50">
                    <div class="middle">
                      <div class="text">
                        <h1><%= @work_details.count%></h1>
                        <h3>Work</h3>
                      </div>
                    </div>
                  </a>
                </div>
                <div class="col-lg-4">
                  <a href="/activity_details" class="d-block mb-10 h-50">
                    <div class="middle">
                      <div class="text">
                        <h1><%= @activity_details.count %></h1>
                        <h3>Activity</h3>
                      </div>
                    </div>
                  </a>
                </div>
              </div>
              <div class="footer">
                <hr>
               <div class="stats">
                  <i class="fa fa-history"></i> Updated 3 minutes ago
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card">
          <div class="header">
            <h4 class="title">Resource Management</h4>
          </div>
          <div class="content">
          <div class="row text-center text-lg-left">

            <%= render :partial=> "employee"%>
            </div>
            <div class="footer">
              <hr>
              <div class="stats">
                <i class="fa fa-history"></i> Updated 3 minutes ago
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="card">
          <div class="header">
            <h4 class="title">Order Management</h4>
            <p class="category">24 Hours performance</p>
          </div>
          <div class="content">
            <div id="chartPreferences" class="ct-chart ct-perfect-fourth">
              <div id="container" style="min-width: 310px; height: 400px; max-width: 600px; margin: 0 auto"></div>
              <%= pie_chart Order.group(:status).count %>
            </div>
            <br/>
            <div class="footer">
              <hr>
              <div class="stats">
                <i class="fa fa-history"></i> Updated 3 minutes ago
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card">

          <div class="header">
            <h4 class="title">Performance Monitoring</h4>
            <p class="category">Last Campaign Performance</p>
          </div>
          <div class="content">
            <div id="chartPreferences" class="ct-chart ct-perfect-fourth">
              <%= column_chart [
                {name: "Revenue", data: @receivables },
                {name: "Expense", data: @payables }
               ],
               stacked: true, 
               discrete: true
               %>
            </div>
            <br/>
            <div class="footer">
              <hr>
              <div class="stats">
                <i class="fa fa-clock-o"></i> 
              </div>
            </div>
          </div>
        </div>
      </div>   
    </div>
  </div>
</div>
<script type="text/javascript">
  $(function() {
  Highcharts.chart('container', {
    chart: {
      type: 'pie'
    },

    title: {
      text: null
    },

    legend: {
    //  symbolWidth: 40,
    //       symbolHeight: 20,
  //    squareSymbol: false,
   //   symbolRadius: 0
    },

    plotOptions: {
      pie: {
        dataLabels: {
          enabled: false
        }
      }
    },

    series: [{
      showInLegend: true,
      data: [
        ['s1', 1],
        ['s2', 2],
        ['s3', 3],
        ['s4', 4],
        ['s5', 5]
      ]
    }],
  });
});

</script>