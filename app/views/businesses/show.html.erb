<div class="content">
  <section id="content">
    <section class="main padder">
      <div class="row">
        <div class="col-lg-7">
          <h2><span class="glyphicon glyphicon-user"></span> <%= @business.name %></h2>
        </div>
        <div class="col-lg-5 m-t-large" align="right">
          <div class="btn-group">
            <button  onclick="location.href= '<%= new_work_detail_path %>'"; class="btn btn-success btn-lg" > <i class="icon-plus"> </i>Add New Work</button>
          </div>
          <div class="btn-group">
            <button  onclick="location.href= '<%= new_product_path %>'"; class="btn btn-success btn-lg" > <i class="icon-plus"> </i>Add New Product</button>
          </div>
          <div class="btn-group">
            <%= link_to raw("<i class='icon-mail-reply'></i>Back"), businesses_url, :class=>'btn  btn-default btn-lg' %>
            <p></p>
          </div> 
        </div>
        <%= link_to 'Edit', edit_business_path(@business) %> |
      </div>
      <div class="row">
        <div>
          <p>
            <b>Work detail </b>
            <% @work_details.each do |work_detail| %>
              <p><%= work_detail.name %></p>
            <%end%>
          </p>
        </div>
      </div>

      <div class="row">
        <div>
          <p>
            <b>Products </b>
            <% @products.each do |product| %>
              <p><%= product.name %></p>
            <%end%>
          </p>
        </div>
      </div>

    </section>
  </section>
</div>

