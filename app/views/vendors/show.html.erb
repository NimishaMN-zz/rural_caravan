<div class="content">
<section id="content">
  <section class="main padder">
    <div class="row">
      <div class="col-lg-7">
        <h2><span class="glyphicon glyphicon-user"></span> <%= (@vendor.name rescue nil) %></h2>
      </div>
      <div class="col-lg-5 m-t-large" align="right">
        <%= link_to raw("<i class='icon-mail-reply'></i>Back"), vendors_url, :class=>'btn  btn-default btn-lg' %>
        <p></p>
      </div>  
    </div>

<p>
	<b>Phone Number: </b>
	<%= @vendor.phone_number %>
</p>

<%= link_to 'Edit', edit_vendor_path(@vendor) %> 

<div>
  <p>
    
  </p>
</div>
  <div>
    <b>Total Expense</b>
              <div class='col-lg-12'>
            <table  class="table table-striped b-t text-small" id="report">
              <thead>
                <tr>
                <th>Date</th>
                <th class="text-right">Description</th>
                <th class="text-right">Status</th>
                <th class="text-right">Amount</th>

                </tr>
              </thead>
              <tbody>
             
                <% @expenses.each do |item|%>
                  <tr>
                    <td><%= item.expense_date %></td>
                    <td class="text-right"><%= item.description %></td>
                    <td class="text-right"><%= item.expense_status %></td>
                    <td class="text-right"><%= item.amount %></td>
                  </tr>
                <% end %>
                  <tr>
                    <td></td>
                    <td class="text-right" ><b>Total</b></td>
                    <td class="text-right"><b><%= @expenses.sum(:amount) %></b></td>
                  </tr>
              </tbody>
            </table>
          </div>
  </div>
</section>
</section>
</div>