<%= form_with(model: activity_detail, local: true) do |f| %>
  <div class="row">
    <div class="col-lg-12">
      <section class="panel">
        <div class="panel-body">
          <div class="form-group">
  
  <div class="field">
    <%= f.label :work_detail %><br>
    <%= f.collection_select :work_detail_id, WorkDetail.order(:name), :id,:name %>
  </div>
  <div class="field">
    <%= f.label :team_size %><br>
    <%= f.text_field :team_size %>
  </div>

  <div class="field">
    <%= f.label :choose_employees %>
    <%= f.collection_select :employee_id, Employee.order(:name), :id,:name %>
    
  </div>

  <div class="field">
    <%= f.label :date %><br>
    <%= f.text_field :date %>
  </div>

  <div class="field">
    <%= f.label :amount_of_work %><br>
    <%= f.text_field :amount_of_work %>
  </div>

  <div class="field">
    <%= f.label :expense %><br>
    <%= f.text_field :expense %>
  </div>

  <div class="field">
    <%= f.label :revenue %><br>
    <%= f.text_field :revenue %>
  </div>

            <div class="col-lg-8 col-lg-offset-4" id="submit">
              <button class="btn btn-success">Save</button> 
              <a class="btn btn-default" href="/activity_details">Cancel</a>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
<% end %>
