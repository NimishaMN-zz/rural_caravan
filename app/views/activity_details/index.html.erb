<div class="content">
  <section id="content">
    <section class="main padder">
      <div class="row">
        <div class="col-lg-4">
          <h2><i class="icon-user text"></i>Activities</h2>
        </div>
        <div class="col-lg-8 m-t-large" align="right">
          <div class="btn-group">
            <button  onclick="location.href= '<%= new_activity_detail_path %>'"; class="btn btn-success btn-lg" > <i class="icon-plus"> </i>Add New Activity</button>
            </button>
         </div>
        </div>
      </div>
<div class="panel-body">
                   
       <div class="row">
        <div class="col-lg-12"><p></p>
          <section class="panel">
           <div class="panel-body">
              <div class="table-responsive">
                <table id="activity_details" class="table table-striped m-b-none text-small">
                  <thead>
    <tr>
      <th>Acivity</th>
      <th>Team size</th>
      <th>Date</th>
      <th>Work done</th>
    </tr>
    </thead>
    <tbody>
                    <% if @activity_details.blank? %>
                        <%= render :partial=>"/shared/no_data_found"%>
                      <% else %>
    <% @activity_details.each do |activity_detail| %>
      <tr>
        <td><%= activity_detail.work_detail.name%></td>
        <td><%= activity_detail.team_size%></td>
        <td><%= activity_detail.date%></td>
        <td><%= activity_detail.amount_of_work%></td>
        <td><%= link_to 'Show', activity_detail %></td>
        <td><%= link_to 'Edit', edit_activity_detail_path(activity_detail) %></td>
        <td><%= link_to 'Destroy', activity_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%end%>
  </tbody>
</table>
</div>
              <div class="text-center">
              

        </div>
      </div>
   </section>
   </section>
  </div>