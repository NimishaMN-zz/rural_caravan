<div class="content">
  <section id="content">
    <section class="main padder">
      <div class="row">
        <div class="col-lg-4">
          <h2><i class="icon-user text"></i></i>Customers</h2>
        </div>
        <div class="col-lg-8 m-t-large" align="right">
          <div class="btn-group">
            <button  onclick="location.href= '<%= new_customer_path %>'"; class="btn btn-success btn-lg" > <i class="icon-plus"> </i>Add New Customer</button>
            </button>
         </div>
        </div>
      </div>
 <div class="panel-body">
        
<div class="row">
        <div class="col-lg-12"><p></p>
          <section class="panel">
           <div class="panel-body">
              <div class="table-responsive">
                <table id="customers" class="table table-striped m-b-none text-small">
                  <thead>
                    <tr>
             <th>Name</th>
      <th>Phone no.</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
               </thead>
                  <tbody>
                    <% if @customers.blank? %>
                        <%= render :partial=>"/shared/no_data_found"%>
                      <% else %>

    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.phone_number %></td>
        <td><%= customer.email %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  <% end %>
                  </tbody>
                </table>
              </div>
              <div class="text-center">
              
              </div>              
            </div>  
          </section>
        </div>
      </div>
   </section>
   </section>
  </div>
