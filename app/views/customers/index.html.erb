<div class="content">
  <section id="content">
    <section class="main padder">
      <div class="row">
        <div class="col-lg-4">
          <h2><i class="icon-user text"></i>Customers</h2>
        </div>
        <div class="col-lg-8 m-t-large" align="right">
          <div class="btn-group">
            <button  onclick="location.href= '<%= new_customer_path %>'"; class="btn btn-success btn-lg" > <i class="icon-plus"> </i>Add New Customer</button>
         </div>
        </div>
      </div>
      <div class="row">
        <% if flash[:error].present? %>
          <h4><%= flash[:error] %></h4>
        <%end%>
      </div>
      <div class="panel-body">  
        <div class="row">
          <div class="col-lg-12"><p></p>
            <section class="panel">
              <div class="panel-body">
                <div class="table-responsive">
                  <table id="customers" class="table table-striped m-b-none text-small">
                    <thead>
                      <tr>
                        <th>Name</th>
                        <th>Phone no.</th>
                        <th></th>
                        <th></th>
                        <th></th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if @customers.blank? %>
                        <%= render :partial=>"/shared/no_data_found"%>
                      <% else %>
                        <% @customers.each do |customer| %>
                          <tr>
                            <td><%= customer.name %></td>
                            <td><%= customer.phone_number %></td>
                            <td><%= link_to 'Show', customer %></td>
                            <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
                            <td><%= link_to 'Delete', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                          </tr>
                        <% end %>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              <div class="text-center"></div>              
            </div>  
          </section>
          </div>
        </div>
      </div>
    </section>
  </section>
</div>
